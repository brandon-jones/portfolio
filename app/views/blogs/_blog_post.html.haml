%h2.text-center
  =blog[:title]
- if blog[:tags].present? || blog[:title].present?
  .text-center
    %strong
      Tags: 
    - blog[:tags].split(',').each do |tag|
      - if tag.present?
        %span.badge
          = tag
.small.text-center
  - if blog[:created_at].present?
    =local_time(blog[:created_at])
.blog-body
  =markdown(blog[:body])