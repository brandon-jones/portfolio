%div.container-fluid
  = render :partial => 'layouts/title', locals: { title: "Editing Blog" }
  %div.row
    %div.col-md-6.col-md-offset-3
      %div{:role => "tabpanel"}
        %ul.nav.nav-tabs{:role => "tablist"}
          %li.active{:role => "presentation"}
            %a{"aria-controls" => "home", "data-toggle" => "tab", :href => "#edit", :role => "tab"} Edit
          %li{:id => 'presentation', :role => "presentation"}
            %a{"aria-controls" => "profile", "data-toggle" => "tab", :href => "#preview", :role => "tab"} Preview
        .tab-content
          #edit.tab-pane.active{:role => "tabpanel"} 
            = render :partial => 'markdown/markdown_cheet_sheet_tabbed'
            %hr
            = render 'form'
          #preview.tab-pane{:role => "tabpanel"}
            %div{id: 'markdown-preview'}
      %hr
      = link_to 'Show', blog_path(@blog.id)
      |
      = link_to 'Manage Blogs', manage_blogs_path