%div.container-fluid
  = render :partial => 'layouts/title', locals: { title: @blog.title }
  %div.row
    %div.col-md-6.col-md-offset-3.text-wrapper
      .small.text-center
        =local_time(@blog.created_at)
      .text-center
        - @blog["tags"].split(',').each do |tag|
          %span.badge
            = tag
      .blog-body
        =red_markdown(@blog.body)
      %hr
      =link_to 'Back', blogs_path
      - disqus_thread